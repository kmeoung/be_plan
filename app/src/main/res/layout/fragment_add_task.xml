<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="55dp">
        <ImageView android:id="@+id/iv_close" android:layout_width="55dp" android:layout_height="55dp" android:src="@drawable/btn_close_yel"/>
        <kr.timehub.beplan.base.widgets.TextView android:textSize="18sp" android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/tv_title" android:layout_width="0dp" android:layout_height="match_parent" android:text="TASK 등록" android:layout_weight="1" app:Font="0"/>
        <ImageView android:layout_gravity="center" android:id="@+id/iv_photo" android:visibility="visible" android:layout_width="28dp" android:layout_height="match_parent" android:layout_marginRight="10dp" android:src="@drawable/splash_bg"/>
    </LinearLayout>
    <ImageView android:background="@color/divider_color_1" android:layout_width="match_parent" android:layout_height="1dp"/>
    <android.support.v4.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:background="#eff0f4" android:paddingLeft="7dp" android:paddingTop="14dp" android:paddingRight="7dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <kr.timehub.beplan.base.widgets.EditText android:textSize="12sp" android:textColor="@color/black" android:gravity="top|left" android:id="@+id/et_task" android:background="@drawable/img_board" android:padding="20dp" android:layout_width="match_parent" android:layout_height="match_parent" app:Font="0"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="145dp">
        <LinearLayout android:orientation="horizontal" android:paddingLeft="7dp" android:paddingRight="7dp" android:layout_width="match_parent" android:layout_height="100dp">
            <ImageView android:id="@+id/iv_left" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/btn_left"/>
            <android.support.v4.view.ViewPager android:id="@+id/vp_pager" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <ImageView android:id="@+id/iv_right" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/btn_right"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:background="@color/white" android:paddingLeft="9dp" android:paddingTop="8dp" android:paddingRight="9dp" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <kr.timehub.beplan.base.widgets.TextView android:textSize="16sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/tv_photo" android:background="@drawable/btn_m_box" android:layout_width="0dp" android:layout_height="match_parent" android:text="사진" android:layout_weight="1" app:Font="1"/>
            <kr.timehub.beplan.base.widgets.TextView android:textSize="16sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/tv_video" android:background="@drawable/btn_m_box" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="3dp" android:layout_marginRight="3dp" android:text="동영상" android:layout_weight="1" app:Font="1"/>
            <kr.timehub.beplan.base.widgets.TextView android:textSize="16sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/tv_link" android:background="@drawable/btn_m_box" android:layout_width="0dp" android:layout_height="match_parent" android:text="링크" android:layout_weight="1" app:Font="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:paddingLeft="10dp" android:paddingTop="15dp" android:paddingRight="10dp" android:paddingBottom="7dp" android:layout_width="match_parent" android:layout_height="60dp">
        <kr.timehub.beplan.base.widgets.TextView android:textSize="15sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_save" android:background="@drawable/btn_save" android:layout_width="match_parent" android:layout_height="37dp" android:text="저장" app:Font="1"/>
    </LinearLayout>
</LinearLayout>
