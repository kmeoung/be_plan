<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@null" android:layout_width="280dp" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@drawable/popup_bg_wht_01" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:paddingLeft="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <kr.timehub.beplan.base.widgets.TextView android:textSize="15sp" android:textColor="@color/textColor" android:gravity="center_vertical" android:id="@+id/tv_title" android:paddingLeft="6dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="" android:layout_weight="1" app:Font="1"/>
            <ImageView android:id="@+id/iv_close" android:background="@drawable/btn_close_gray" android:layout_width="50dp" android:layout_height="match_parent" android:scaleType="fitXY"/>
        </LinearLayout>
        <ImageView android:background="@color/popup_divider" android:layout_width="match_parent" android:layout_height="1px"/>
        <LinearLayout android:orientation="vertical" android:padding="8dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <kr.timehub.beplan.base.widgets.TextView android:textColor="@color/black" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:text="업무 제목" app:Font="0"/>
            <kr.timehub.beplan.base.widgets.EditText android:textSize="15sp" android:textColor="@color/textColor" android:textColorHint="@color/hintColor" android:gravity="center" android:id="@+id/et_contents" android:background="@drawable/input_bg" android:paddingLeft="8dp" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginBottom="8dp" android:text="" android:hint="@string/str_hint_title" android:maxLines="1" android:lines="1" app:Font="0"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="48dp">
                <kr.timehub.beplan.base.widgets.Button android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/btn_positive" android:background="@drawable/btn_grdt_05" android:layout_width="0dp" android:layout_height="48dp" android:layout_marginRight="8dp" android:text="" android:layout_weight="1" app:Font="0"/>
                <kr.timehub.beplan.base.widgets.Button android:textSize="16sp" android:textColor="@color/textColor" android:gravity="center" android:id="@+id/btn_negative" android:background="@drawable/btn_wht_05" android:layout_width="0dp" android:layout_height="48dp" android:text="" android:layout_weight="1" app:Font="0"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
