<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/v_state" android:layout_width="match_parent" android:layout_height="0dp"/>
    <kr.timehub.beplan.base.widgets.BaseMainToolBar android:id="@+id/base_toolbar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="@dimen/default_action_bar_height"/>
    <ImageView android:background="@color/project_divider" android:layout_width="match_parent" android:layout_height="1px"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="50dp">
        <ImageButton android:id="@+id/btn_before" android:background="@null" android:layout_width="25dp" android:layout_height="25dp" android:src="@drawable/icn_todo_send"/>
        <kr.timehub.beplan.base.widgets.TextView android:textSize="20sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/tv_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:text="" app:Font="1"/>
        <ImageButton android:id="@+id/btn_after" android:background="@null" android:layout_width="25dp" android:layout_height="25dp" android:src="@drawable/icn_todo_recieve"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView android:id="@+id/base_rv" android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>
