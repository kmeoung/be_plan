<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@null" android:layout_width="280dp" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:background="@drawable/popup_top" android:paddingLeft="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <kr.timehub.beplan.base.widgets.TextView android:textSize="15sp" android:textColor="@color/textColor" android:gravity="center_vertical" android:paddingLeft="6dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="비밀번호 찾기" android:layout_weight="1" app:Font="1"/>
        <ImageView android:id="@+id/iv_close" android:background="@drawable/btn_close_gray" android:layout_width="50dp" android:layout_height="match_parent" android:scaleType="fitXY"/>
    </LinearLayout>
    <ImageView android:background="@color/popup_divider" android:layout_width="match_parent" android:layout_height="1px"/>
    <LinearLayout android:orientation="vertical" android:background="@drawable/popup_bot_gray" android:padding="8dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <kr.timehub.beplan.base.widgets.EditText android:textSize="15sp" android:textColor="@color/textColor" android:textColorHint="@color/hintColor" android:id="@+id/et_email" android:background="@drawable/input_bg" android:paddingLeft="8dp" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginBottom="8dp" android:hint="이메일 주소를 입력해주세요" android:inputType="textEmailAddress" app:Font="0"/>
        <kr.timehub.beplan.base.widgets.Button android:textSize="16sp" android:textColor="@color/white" android:id="@+id/btn_ok" android:background="@drawable/button_findpassword" android:layout_width="match_parent" android:layout_height="48dp" android:text="확인" app:Font="0"/>
    </LinearLayout>
</LinearLayout>
